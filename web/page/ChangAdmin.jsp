<script type="text/javascript">
    function sub() {
        var id = $("#id").val();
        var name = $("#name").val();
        var pwd = $("#pwd").val();
        var nickname=$("#nickname").val();
        var url = "${basePath}/admin/adminInfo.do?name=" + name + "&password=" + pwd + "&id=" + id+"&nickname="+nickname;

        $
                .ajax({
                    url: url,
                    type: 'post',
                    dataType: "text",
                    success: function (data) {
                        if (data == "success") {
                            alert("修改成功");
                            location.href = "${basePath}/page/adminList.jsp";
                        } else if (data == "rep") {
                            alert("用户名已存在");
                        } else if (data == "role") {
                            alert("权限不足");
                        } else {
                            alert("网络错误");
                        }

                    }
                });
    }
</script>


